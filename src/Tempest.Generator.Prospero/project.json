{
  "version": "1.0.0-*",

  "description": "Prospero self-hosted scaffolder",
  "packOptions": {
    "licenseUrl": ""
  },

  "dependencies": {
      "Tempest.Core": {
          "version": "1.0.0-*",
          "type": "default"
      },
      "Tempest.Boot": {
          "version": "1.0.0-*",
          "type": "default"
      },
      "Microsoft.NETCore.App": {
          "version": "1.0.0"
      }
  },

  "frameworks": {
      "netcoreapp1.0": {
          "imports": "dnxcore50"
      }
  },

  "runtimes": {
      "win7-x64": {},
      "osx.10.11-x64": {},
      "osx.10.10-x64": {},
      "ubuntu.14.04-x64": {}
  },

  "buildOptions": {
      "emitEntryPoint": true,
      "compile": {
          "exclude": "Template\\**\\*.*"
      },
      "copyToOutput": {
          "include": [
              "Template\\**\\*.*"
          ]
      },
      "embed": {
          "include": [
              "Template\\**\\*.*"
          ],
          "includeFiles": [
              "Template/src/ProsperoTemplate.Core/ProsperoTemplate.Core.xproj",
              "Template/src/ProsperoTemplate.Web/ProsperoTemplate.Web.xproj",
              "Template/src/ProsperoTemplate.Console/ProsperoTemplate.Console.xproj",
          ]
      }
  },

}
